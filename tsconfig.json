{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "#*": [
        "./src/*"
      ],
      "#test/*": [
        "./test/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src",
    "test"
  ]
}